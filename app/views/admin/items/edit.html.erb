<h2>商品編集</h2>
<%= form_with model:@item, url: admin_items_path, method: :patch, local:true do |f| %>
<tr>
  <td>商品画像</td>
  <td><%= f.attachment_field :image %></td>
</tr>

<tr>
    <td>商品名</td>
    <td><%=f.text_field:name %></td>
</tr>

<tr>
    <td>商品説明</td>
    <td><%=f.text_area:introduction %></td>
</tr>

<tr>
    <td>ジャンル</td>
</tr>

<tr>
    <td>税抜き価格</td>
    <td><%=f.text_field:price %>円</td>
</tr>

<tr>
    <td>販売ステータス</td>
</tr>

<%= f.submit'変更を保存' %>
<% end %>
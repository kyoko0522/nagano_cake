<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-8 offset-md-2">
<div class ="w-25 p-2 m-3" style ="background-color: #eee;">商品編集</div>


<%= form_with model:@item, url: admin_item_path(@item), method: :patch, local:true do |f| %>
<table>
<tr>
  <th>商品画像</th>
  <td><%= f.attachment_field :image %></td>
</tr>

<tr>
    <th>商品名</th>
    <td><%=f.text_field :name %></td>
</tr>

<tr>
    <th>商品説明</th>
    <td><%=f.text_area :introduction %></td>
</tr>


<tr>
    <th>税抜き価格</th>
    <td><%=f.text_field :price %>円</td>
</tr>

<tr>
    <td></td>
    <td><%= f.submit'変更を保存',class: "btn btn-sm btn-success" %></td>
</tr>
<% end %>
</table>
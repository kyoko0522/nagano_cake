<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-8 offset-md-2">
<div class ="w-25 p-2 m-3" style ="background-color: #eee;">商品一覧</div>
<button type="button" class="btn btn-light rounded-circle p-0" style="width:2rem;height:2rem;"><%= link_to "＋",new_admin_item_path %></button>
<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税込価格</th>
            <th colspan="3"></th>
        </tr>
    </thead>
        <tbody>
            <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_path(item.id), class: 'widelink' %></td>
            <td><%= item.price %></td>
            <td><%= item.genre_id %></td>
            <td><%= item.is_active %></td>
          </tr>
          <% end %>
        </tbody>
</table>
</div>
</div>
</div>
<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-10 offset-md-1">
<div class ="w-25 p-2 m-3" style ="background-color: #eee;">商品詳細</div>

<div class="container">
<div class="row">
<div class="col-md-3">
    <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg' %>
</div>

<div class="col-md-5">

<table>
<tr>
    <th>商品名</th>
    <td><%= @item.name %></td>
</tr>
<tr>
    <th>商品説明</th>
    <td><%= @item.introduction %></td>
</tr>
<tr>
    <th>税込価格（税抜き価格）</th>
    <td><%= @item.with_tax_price%>円(<%= @item.price %>)円</td>
</tr>
<tr>
    <td></td>
    <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-sm btn-success" %></td>
</tr>


</table>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
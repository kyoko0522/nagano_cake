<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-8 offset-md-2">
<div class ="w-25 p-2 m-3" style ="background-color: #eee;">注文履歴一覧</div>

<table class="table table-hover table-inverse">
    <thead class="thead-light">
        <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th colspan="3"></th>
        </tr>
    </thead>

<tbody>
    <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at.strftime('%Y/%m/%d')  %></td>
    <th><%= order.name %></th>
    <th><%#= order.order_detail.item.amount %></th>

   </tr>
　　<% end %>

</tbody>
</table>
</div>
</div>
</div>
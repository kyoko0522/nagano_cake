<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-8 offset-md-2">
<div class ="w-50 p-2 m-3" style ="background-color: #eee;"><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報</div>


<table>

    <td>会員ID</td>
    <td><%= @customer.id %></td>

<%= form_with model:@customer,url: admin_customer_path(@customer.id), method: :patch, local: true do |f| %>
    <tr>
        <th>氏名</th>
        <td><%= f.text_field :first_name %></td>
        <td><%= f.text_field :last_name %></td>
    </tr>
    <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :first_name_kana %></td>
        <td><%= f.text_field :last_name_kana %></td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %>
    </tr>
    <tr>
        <th>会員ステータス</th>

  <td><%= f.radio_button :is_deleted, :true %>
  <%= f.label :is_deleted, "有効" %></td>
  <td><%= f.radio_button :is_deleted, :false %>
  <%= f.label :is_deleted, "退会" %></td>
     </tr>
    <tr>
        <th></th>
      <td><%= f.submit '変更を保存', class: "btn btn-sm btn-success" %></td>
     </tr>
<% end %>
</table>
</div>
</div>
</div>
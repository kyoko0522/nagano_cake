<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-8 offset-md-2">
<div class ="w-25 p-2 m-3" style ="background-color: #eee;">会員一覧</div>

<table class="table table-hover table-inverse">
    <thead>
        <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th colspan="3"></th>
        </tr>
    </thead>

<tbody>
    <% @customers.each do |customer| %>
  <tr>
    <td><%= customer.id %></td>
    <th><%= link_to customer.first_name, admin_customer_path(customer.id), class: 'widelink' %></th>
    <th><%= customer.email %></th>
    <th><%= customer.is_deleted %></th>

   </tr>
　　<% end %>

</tbody>
</table>
</div>
</div>
</div>
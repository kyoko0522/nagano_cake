<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-8 offset-md-2">
<div class ="w-50 p-2 m-3" style ="background-color: #eee;"><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</div>


<table>
<tr>
    <th>会員ID</th>
    <td></td>
    <td><%= @customer.id %></td>
</tr>
<tr>
    <th>氏名</th>
    <td></td>
    <td><%= @customer.first_name %><%= @customer.last_name %></td>
</tr>

<tr>
     <th>フリガナ</th>
     <td></td>
     <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
</tr>

<tr>
    <th>郵便番号</th>
    <td></td>
    <td><%= @customer.postal_code %></td>
</tr>

<tr>
    <th>住所</th>
    <td></td>
    <td><%= @customer.address %></td>
</tr>

<tr>
    <th>電話番号</th>
    <td></td>
    <td><%= @customer.telephone_number %></td>
</tr>

<tr>
    <th>メールアドレス</th>
    <td></td>
    <td><%= @customer.email %></td>
</tr>

<tr>
    <th>会員ステータス</th>
    <td></td>
    <td><%= @customer.is_deleted ? '有効':'退会' %></td>
</tr>
<tr>
    <th></th>
    <td></td>
    <td><%=link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-sm btn-success" %></td>
    <td><%=link_to '注文履歴一覧を見る', admin_path, class: "btn btn-sm btn-primary" %></td>
</tr>

</table>
</div>
</div>
</div>
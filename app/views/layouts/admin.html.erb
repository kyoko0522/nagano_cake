<!DOCTYPE html>
<html>
  <head>
    <title>LOGO</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
 <meta name="viwport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-light">
        <div class="container">
          <%= link_to'LOGO', root_path, class: 'nav-link text-white' %>
          <!--<a class="navbar-brand p-3" href="/">Bookers</a>-->
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggle-icon"></span>
     </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
    <% if customer_signed_in? %>

    <li class="nav-item ">
      <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-white' %>
     </i>


     <li class="nav-item ">
       <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-white' %>
       </i>


      <li class="nav-item">
        <%= link_to "注文履歴一覧", admin_path, class: 'nav-link text-white' %>
       </li>


      <li class="nav-item">
      <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-white' do %>
      <li class="fas fa-sign-out-alt nav-link text-light"></li>
      ログアウト
      <% end %>
    </li>

    <% else %>

    <li class="nav-item ">
      <%= link_to"About", about_path, class: 'nav-link text-white' %>
      </i>

    <li class="nav-item">
      <%= link_to "商品一覧", items_path, class: 'nav-link text-white' %>
    </li>

    <li class="naav-item">
      <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-white' %>
      </li>
    <li class="nav-item"><%= link_to new_admin_session_path, class: 'nav-link text-white' do %>
    <li class="fas fa-sign-in-alt nav-link text-light"></li>
    ログイン
    <% end %>
    </li>

    <% end %>
    </ul>
    </div>
    </div>
    </nav>
  </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer>
      <p class="text-center"></p>
    </footer>
  </body>
</html>

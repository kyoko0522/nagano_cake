<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-8 offset-md-2">
<div class ="w-25 p-2 m-3" style ="background-color: #eee;">配送先編集</div>


<%= form_with model:@address, local: true do |f| %>
<table>
<tr>
    <td>郵便番号（ハイフンなし）</td>
    <td><%= f.text_field :postal_code %></td>
</tr>

<tr>
    <td>住所</td>
    <td><%= f.text_field :address %></td>
</tr>

<tr>
    <td>宛名</td>
    <td><%= f.text_field :name %></td>
</tr>
<tr>
    <td></td>
    <td><%= f.submit '変更内容を保存',class: "btn btn-sm btn-success" %></td>
</tr>

<% end %>
</table>
</div>
</div>
</div>
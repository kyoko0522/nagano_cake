<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-8 offset-md-2">
<div class ="w-25 p-2 m-3" style ="background-color: #eee;">配送先登録/一覧</div>
<%= form_with model:@new_address, local:true do |f| %>
<table>
<tbody>
<tr>
    <th>郵便番号（ハイフンなし）</th>
    <td> <%= f.text_field :postal_code, :placeholder => "0000000" %></td>
</tr>
<tr>
    <th>住所</th>
    <td> <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0" %></td>
</tr>
<tr>
    <th>宛名</th>
    <td> <%= f.text_field :name, :placeholder => "令和道子" %></td>
    <td> <%= f.submit '新規登録', class: "btn btn-sm btn-success" %></td>
<% end %>
</tr>
</table>
<table class="table table-hover table-inverse">
<thead>
        <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
        <th colspan="3"></th>
        </tr>
    </thead>

<tbody>
    <% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集する", edit_address_path(address.id) %></td>
    <td><%= link_to "削除", address_path(address), method: :delete %></td>
   </tr>
　　<% end %>

</tbody>

</tbody>

</table>



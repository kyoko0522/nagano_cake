<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-10 offset-md-1">
<div class ="w-25 p-2 m-3" style ="background-color:  #eee;;">
<h3>ログイン</h3>
</div>

<h4>会員の方はこちらからログイン</h4>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<table>
  <tr>
  <div class="field">
    <td><%= f.label :メールアドレス %></td>

    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </div>
</tr>

<tr>
  <div class="field">
    <td><%= f.label :パスワード %></td>
    <td><%= f.password_field :password, autocomplete: "current-password" %></td>
  </div>
</tr>
<tr>
  <th></th>
 <td><% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div></td>
  <% end %>
  <td><div class="actions">
    <%= f.submit "ログイン", class:"btn btn-primary"%>
  </div></td>
<% end %>
</tr>
<tr>
  <td><p>会員登録がお済みでない方</p>
　<%= link_to "こちら",new_customer_registration_path %>から新規登録を行なってください。</td>
</tr>

</table>
<%#= render "public/shared/links" %>
</div>
</div>
</div>
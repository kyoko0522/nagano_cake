<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-8 offset-md-2">
<div class ="w-25 p-2 m-3" style ="background-color: #eee;">マイページ</div>


<thead>
<tr>
<td>登録情報</td>
<td><%= link_to'編集する', edit_customer_path(@customer.id), class: "btn btn-sm btn-success" %></td>
<td></td>
</tr>
</thead>

<tbody>
    <table class="table table-bordered">
        <tr>
            <td>氏名</td>
            <td><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
            <td>カナ</td>
            <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
        </tr>
        <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
        </tr>
    </table>
    <td>配送先</td>
    <td><%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %></td>
    <td>注文履歴</td>
    <td><%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></td>
</tbody>
</div>
</div>
</div>
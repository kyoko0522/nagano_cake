<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-8 offset-md-2">
<div class ="w-25 p-2 m-3" style ="background-color: #eee;">会員情報編集</div>


    <%= form_with model:@customer, local: true do |f| %>
    <table>
    <tbody>
    <tr>
        <td>氏名</td>
        <td><%= f.text_field :first_name %></td>
        <td><%= f.text_field :last_name %></td>
    </tr>
    <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :first_name_kana %></td>
        <td><%= f.text_field :last_name_kana %></td>
    </tr>
    <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
    </tr>
    <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email %></td>
    </tr>
    <tr>
        <td></td>
      <td><%= f.submit '編集内容を保存', class: "btn btn-sm btn-success" %></td>
      <% end %>
      <td><%= link_to'退会する', customers_exit_path(@customer), class: "btn btn-sm btn-danger" %></td>
     </tr>

</tbody>
</table>
</div>
</div>
</div>
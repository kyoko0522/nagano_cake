<h2>注文情報入力</h2>
<table>
<tbody>
<tr>
<%= form_with model:@order, url:'/orders/confirm', method: :post, local:true do |f| %>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
</tr>
<tr>
<%= f.radio_button :address_number, 0 %>
<%= f.label :address_number_1, "ご自身の住所" %>
<%= current_customer.postal_code %>
<%= current_customer.address %>
<%= current_customer.first_name %>
</tr>
<tr>
<%= f.radio_button :address_number, 1 %>
<%= f.label :address_number_1, "登録済住所から選択" %>
<%= f.collection_select(:registered, current_customer.addresses.all, :id, :address) %>
</tr>
<tr>
<%= f.radio_button :address_number, 2 %>
<%= f.label :address_number_2, "新しいお届け先" %>
<%= f.text_field :postal_code, :placeholder => "0000000" %>
  <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0" %>
  <%= f.text_area :name, :placeholder => "令和道子" %>
</tr>
<%= f.submit '確認画面へ進む', class: "btn btn-sm btn-success" %>
<% end %>
</tbody>
</table>



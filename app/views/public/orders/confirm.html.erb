<h2>注文情報確認</h2>
<table class="table table-hover table-inverse">
    <thead>
        <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th colspan="3"></th>
        </tr>

    </thead>

    <tbody>
        <tr><% @cart_items.each do |cart_item| %>
            <td><%= cart_item.item.name %></td>
            <%= (cart_item.item.price).to_s(:delimited) %>
            <td><%= cart_item.amount %></td>
            <%#= (cart_item.item.price*cart.amount).to_s(:delimited) %>
             <% end %>
        </tr>
    </tbody>
 </table>

<table class="table table-hover table-inverse">
    <thead>
        <tr><th>送料</th><td>800</td></tr>
        <tr><th>商品合計</th><td><%= @total %></td></tr>
         <tr><th>請求金額</th><td><%= @total.to_s(:delimited) %></td></tr>
</table>

            <tr><td>支払い方法</td><td><%= @order.payment_method_i18n %></td></tr>
            <tr><td>お届け先</td><td><%= @order.postal_code %><%= @order.address %><%= @order.name %></td></tr>
            <%= form_with model:@order, local:true do |f| %>
            <%= f.hidden_field :postal_code, :value => @order.postal_code %>
            <%= f.hidden_field :address, :value => @order.address %>
            <%= f.hidden_field :name, :value => @order.name %>
            <%= f.hidden_field :total_price, :value => @order.total_price %>
            <td><%= f.submit "注文を確定する" %></td>
            <% end %>









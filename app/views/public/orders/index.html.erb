<h2>注文履歴</h2>

<table class="table table-hover table-inverse">
    <thead>
        <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払い金額</th>
        <th>注文詳細</th>
        <th colspan="3"></th>
        </tr>
    </thead>

<tbody>
    <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
    <td><%= order.address %></td>
    <% order.order_details.each do |order_detail| %>
    <td><%= order_detail.item.name %></td>
    <% order_detail.item.with_tax_price%>

    <% @total +=  order_detail.item.with_tax_price %>
    <% @total_pay = @total + 800 %>
    <% end %>

    <td><%= @total_pay %></td>
    <td></td>
    <td><%= link_to "表示する", order_path(order.id) %></td>
   </tr>
　　<% end %>

</tbody>
</table>
<h2>注文履歴詳細</h2>

<h3>注文情報</h3>

<table>
    <tr><th>注文日</th><td><%= @order.created_at %></td></tr>
    <tr><th>配送先</th><td><%= @order.address %></td></tr>
    <tr><th>支払い方法</th><td><%= @order.payment_method %></td></tr>
</table>

<table>
    <tr><th>商品合計</th><td><%= @total %></td></tr>
    <tr><th>配送料</th><td>800</td></tr>
    <tr><th>ご請求額</th><td><%= @order.total_price %></td></tr>
</table>

<table class="table table-hover table-inverse">
    <thead>
        <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
        <th colspan="3"></th>
        </tr>
    </thead>

<tbody>
      <% @order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.item.with_tax_price %></td>
    <td><%= order_detail.item.amount %></td>
    <td><%= order_detail.item.subtotal %></td>
   </tr>
   <% @total +=  order_detail.item.subtotal %>
　　<% end %>

</tbody>
</table>
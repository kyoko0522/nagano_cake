<div class="container">
<div class="row">
<div class="col-12">
<div class ="w-25 p-2 m-3" style ="background-color: #eee;">
<td><h1>商品一覧</h1></td><td>全<%= Item.count %>件</td>
</div>


<table>

<tbody>

    <tr><% @items.each do |item| %>
        <td>
        <%= link_to item_path(item.id) do %>
        <p><%= attachment_image_tag item, :image, :fill, 250, 200, format: 'jpeg' %></p>
        <% end %>
        <p><h4><%= item.name %></h4></p>
        <p><h4>¥<%= item.price %></h4></p>
        <% end %>
        </td>
    </tr>

    <%= paginate @items %>
</tbody>
</table>
</div>
</div>
</div>

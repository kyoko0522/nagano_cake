<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-8 offset-md-2">
<div class ="w-25 p-2 m-3" style ="background-color: #eee;">
<td>商品一覧</td><td></td><td>全<%= Item.count %>件</td>
</div>

<div class="row">
<div class="col-8" >
<table>

<tbody>

    <tr><% @items.each do |item| %>
        <td>
        <%= link_to item_path(item.id) do %>
        <p><%= attachment_image_tag item, :image, :fill, 200, 200, format: 'jpeg' %></p>
        <% end %>
        <p><h4><%= item.name %></h4></p>
        <p><h4>¥<%= item.price %></h4></p>
        <% end %>
        </td>
    </tr>

    <%= paginate @items %>
</tbody>
</table>
</div>
</div>
</div>
</div>
</div>
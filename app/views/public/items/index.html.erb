<thead>
    <tr>
        <td>商品一覧</td>
        <td>全件</td>
    </tr>
</thead>

<tbody>
    <% @items.each do |item| %>
    <tr>
        <%= link_to item_path(item.id) do %>
        <p><%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %></p>
        <% end %>
        <p><%= item.name %></p>
        <p>¥<%= item.price %></p>
    </tr>
    <% end %>
    <%= paginate @items %>
</tbody>
